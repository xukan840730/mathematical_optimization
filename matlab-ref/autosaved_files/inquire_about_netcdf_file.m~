function [netcdf_file_info] = inquire_about_netcdf_file(fname)

%% Evaluate whether file exists
if exist(fname) ~= 2; 
  display(strcat(fname,' DOES NOT SEEM TO EXIST!!!'));
else
  ncid=netcdf.open(fname,'NC_NOWRITE'); %open file
  [netcdf_file_info.ndims,...
   netcdf_file_info.nvars,...
   netcdf_file_info.ngatts,...
   netcdf_file_info.unlimdimid]         = netcdf.inq(ncid); 
  for n=1:netcdf_file_info.nvars;
    [netcdf_file_info.varname{n},...
     netcdf_file_info.xtype{n},...
     netcdf_file_info.dimids{n},... 
     netcdf_file_info.numatts{n}]       = netcdf.inqVar(ncid,n-1);
  end
end
